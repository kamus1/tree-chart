{
    "compilerOptions": {
      "target": "ES2020",                
      "module": "CommonJS",              
      "outDir": "dist",                  
      "rootDir": ".",                    
      "declaration": true,               
      "declarationDir": "dist",          
      "esModuleInterop": true,           
      "forceConsistentCasingInFileNames": true, 
      "strict": false,                    
