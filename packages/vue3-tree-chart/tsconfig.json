{
    "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "declaration": true, 
      "declarationDir": "dist",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "types": ["node"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*", "vite.config.ts"],
    "exclude": ["node_modules", "dist"]
  }